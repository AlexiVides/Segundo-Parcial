@model CajeroAutomatico.Models.Cajero
@{
    ViewBag.Title = "Index1";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<h2>Banco Histórico</h2>
<div class="container tab-content 5 p-3 mb-2 bg-info text-dark text-center">
    @using (Html.BeginForm("Index1", "Cajero", FormMethod.Post))
    {
        <label>Digite el monto de dinero a retirar</label><br /><br />

        @Html.TextBoxFor(C => C.monto)
        <br /><br />

        <input type="submit" class="btn btn-secondary" />
    }
</div>

